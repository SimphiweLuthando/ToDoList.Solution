@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1 class="text-center">Categories</h1>

<div class="container col-md-4 ">
  <div class="card-body mb-4">
    <ul class="list-group">
      @foreach (Category category in Model)
      {
        <li class="list-group-item">
          @Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId }, new
            {
              @class =
                 "link-underline-secondary text-secondary"
            })
        </li>
      }
    </ul>
  </div>
  <div class="row">
  <p><a href="@Url.Action("Create")" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add new category</a></p>
  <p><a href="@Url.Action("Index", "Home")" class="btn btn-primary"><i class="bi bi-house"></i> Home</a></p>
</div>
</div>
