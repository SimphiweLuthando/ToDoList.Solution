@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<div class="container px-3 mb-5">
  <div class="card col-sm-6 mx-auto">
    <div class="card-body">
      <h1 class="card-title">Welcome to the To Do List!</h1>
      <hr />

      <h4>Categories</h4>
      @if (Model["categories"].Length == 0)
      {
        <p>No categories have been added yet!</p>
      }
      <ul class="list-group">
        @foreach (Category cat in Model["categories"])
        {
          <a href="@Url.Action("Details", "Categories", new { id = cat.CategoryId })" class="list-group-item list-group-item-action px-3 border-0 rounded-3 mb-2 list-group-item-success">
            @cat.Name
          </a>
        }
      </ul>

      <h4>Items</h4>
      @if (Model["items"].Length == 0)
      {
        <p>No items have been added yet!</p>
      }
      <ul class="list-group">
        @foreach (Item item in Model["items"])
        {
          <a href="@Url.Action("Details", "Items", new { id = item.ItemId })" class="list-group-item list-group-item-action px-3 border-0 rounded-3 mb-2 list-group-item-info">
            @item.Description
          </a>
        }
      </ul>

      <hr />

      <div class="btn-group-vertical" role="group" aria-label="Item Actions">
        <a href="@Url.Action("Index", "Account")" class="btn btn-success mb-2">
          <i class="bi bi-person"></i> Create or manage an account
        </a>
        <a href="@Url.Action("Index", "Items")" class="btn btn-primary mb-2">
          <i class="bi bi-list-check"></i> Manage items
        </a>
        <a href="@Url.Action("Index", "Categories")" class="btn btn-primary mb-2">
          <i class="bi bi-collection"></i> Manage categories
        </a>
        <a href="@Url.Action("Index", "Tags")" class="btn btn-primary mb-2">
          <i class="bi bi-tag"></i> Manage tags
        </a>
      </div>
    </div>
  </div>
</div>