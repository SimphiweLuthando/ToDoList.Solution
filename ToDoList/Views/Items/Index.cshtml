@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-md-12">
      <h1>Items</h1>

      @if (@Model.Count == 0)
      {
        <h3>No items have been added yet!</h3>
      }
      else
      {
        <ul class="list-group mb-5">
          @foreach (Item item in Model)
          {
            <li class="list-group-item">@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) |
              @item.Category.Name</li>
          }
        </ul>
      }
      @* @Html.ActionLink("Add new item", "Create", null, new { @class = "btn btn-primary" }) *@
      @* @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" }) *@
      <div class="container">
        <div class="row gy-2">
          <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-square"></i> Add new item
          </a>
          <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="bi bi-house"></i> Home
          </a>
        </div>
      </div>

    </div>
  </div>
</div>