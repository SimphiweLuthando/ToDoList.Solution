@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Items</h1>

      @if (@Model.Count == 0)
      {
        <h3>No items have been added yet!</h3>
      } 
      else
      {
        <ul class="list-group">
          @foreach (Item item in Model)
          {
            <li class="list-group-item">@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name</li>
          }
        </ul>
      }

      <p>@Html.ActionLink("Add new item", "Create", null, new { @class = "btn btn-primary" })</p>
      <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-secondary" })</p>
    </div>
  </div>
</div>